# /etc/cron.d/chicago-crontasks
APPDIR=/home/datamade/chicago
PYTHONDIR=/home/datamade/.virtualenvs/chicago/bin/python
0,15,30,45 * * * * datamade /usr/bin/flock -n /tmp/chicago_dataload.lock -c 'cd $APPDIR && $PYTHONDIR manage.py import_data >> /tmp/chicago-loaddata.log 2>&1 && $PYTHONDIR manage.py update_index >> /tmp/chicago-updateindex.log 2>&1 && $PYTHONDIR manage.py data_integrity >> /tmp/chicago-integrity.log'
