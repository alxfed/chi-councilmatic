FROM python:3.5
RUN pip install --upgrade pip
RUN pip install --upgrade setuptools
RUN mkdir /code
RUN mkdir /code/chicago
RUN mkdir /code/councilmatic
WORKDIR /code
ADD requirements.txt /code/
RUN pip install -r requirements.txt
ADD chicago /code/chicago/
ADD councilmatic /code/councilmatic/
ADD manage.py /code/
